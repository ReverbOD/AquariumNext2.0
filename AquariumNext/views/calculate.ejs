<%- include('partials/header'); %>

<!-- Calculator Header-->
<header class ="jumbotron">
    <div class="container">
        <h1>Calcolatori</h1>
        <p>Troverai tutti gli attrezzi necessari per iniziare e manutenere la tua vasca</p>      
    </div>
</header>

<!--litres -->
<div>
    <div class="container-fluid">
        <div class="row no-gutter">
            <div class="col-md-8 col-lg-6">
                <div class="login d-flex align-items-center py-5">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-9 col-lg-8 mx-auto">
                                <div class="text-center">
                                    <h3>Calcolatore Litri</h3>
                                    <p class=”center”>Calcola il litraggio della vasca</p>
                                </div>    
                                <form id='litri' autocomplete="off" action="">
                                <!-- Lenght -->
                                    <div class="form-group">
                                        <label for="insertLenght">Inserisci Lunghezza</label>                                        
                                        <input type="text" class="form-control" id="insertLenght" placeholder="Lunghezza" required>
                                    </div>
                                <!-- Deep -->
                                    <div class="form-group">
                                        <label for="insertDeep">Inserisci Profondità</label>
                                        <input type="text" class="form-control" id="insertDeep" placeholder="Profondità" required>
                                    </div>
                                <!-- High -->
                                    <div class="form-group">
                                        <label for="insertHigh">Inserisci Altezza</label>
                                        <input type="text" class="form-control" id="insertHigh" placeholder="Altezza" required>
                                    </div>
                                <!-- Calculate -->                        
                                    <button type="submit" class="btn btn-dark" value="Calcola">Calcola</button>
                                <!-- Result -->
                                <hr>
                                <div id="resultLt" class="alert alert-dark"></div>    
                                </form>      
                            </div>    
                        </div>    
                    </div>    
                </div>    
            </div>     
        </div>
    </div>
</div>
