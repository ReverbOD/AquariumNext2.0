                                        <input type="text" class="form-control" id="insertLumen" placeholder="Lumen">
                                    </div>    
                                <!-- Calculate -->                        
                                    <button type="submit" class="btn btn-dark">Calcola</button>
                                <!-- Result -->
                                <hr>
                                <!-- somma = (lumen/litri); MINIMO= <40 - MEDIO= >40<60 - ALTO= >=60 -->
