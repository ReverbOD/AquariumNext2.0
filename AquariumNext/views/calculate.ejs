<!--Water -->
<div>
    <div class="container-fluid">
        <div class="row no-gutter">
            <div class="col-md-8 col-lg-6">
                <div class="login d-flex align-items-center py-5">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-9 col-lg-8 mx-auto">
                                <div class="text-center">
                                    <h3>Calcolatore Acqua</h3>
                                    <p class=”center”>Calcola il rapporto di Osmosi/Rubinetto per avere i giusti valori per il tuo acquario</p>
                                </div>    
                                <form id="change" autocomplete="off" action="">
                                <!-- Lt Change -->
                                    <div class="form-group">
                                        <label for="insertChange">Inserisci Lt Cambio</label>                                        
                                        <input type="text" class="form-control" id="insertChange" placeholder="Lt Cambio Acqua">
                                    </div>
                                <!-- kH rete -->
                                    <div class="form-group">
                                        <label for="insertKh">Inserisci kH Rubinetto</label>
                                        <input type="text" class="form-control" id="insertKh" placeholder="kH Rubinetto">
                                    </div>
                                <!-- gH rete -->
                                    <div class="form-group">
                                        <label for="insertGh">Inserisci gH Rubinetto</label>
                                        <input type="text" class="form-control" id="insertGh" placeholder="gH Rubinetto">
                                    </div>
                                <!-- kH desired -->
                                    <div class="form-group">
                                        <label for="insertKhDesire">Inserisci kH che vuoi raggiungere</label>
                                        <input type="text" class="form-control" id="insertKhDesire" placeholder="kH Desiderato">
                                    </div>                                    
                                <!-- Calculate -->                        
                                    <button type="submit" class="btn btn-dark">Calcola</button>
                                <!-- Result  somma = ((litricambio / khrubinetto) * khdesiderato ); sommagh = (ghrubinetto / litricambio * (somma));-->
                                <hr>
                                <div id="resultChange" class="alert alert-dark"></div>    
                                </form>      
                            </div>    
                        </div>    
                    </div>    
                </div>    
            </div>     
        </div>
    </div>
</div>

