<%- include('../partials/navbar.ejs'); %>

<div class="drawer">
    
    <h1 class="tables-title">Schede Piante</h1>

    <div class="flex-wrap">

    <% if (plants.length > 0) {%>
        
    <% plants.forEach((plant) => { %>
    <div class="card-container">
        <div class="card">

          <img src="/media/plant/<%= plant.plant_image %>">

          <div class="card-info">
            <h4><%= plant.plant_name %></h4>
          </div>

          <div class="info-tab">
            <h2>Info</h2>
            <a class="btn-info" href="/scheda-pianta?id=<%=plant.id%>">Apri</a>
          </div>

       </div>
    </div>

    <% }) %>
    <% } else { %>
        <p class="text-center">Nessuna pianta trovato</p>
    <% } %>
    
    </div>
</div>

<%- include('../partials/footer.ejs'); %>