    <div class="row">
        <div class="col-md-3">
            <p class="lead">Aquarium Next - Schede</p>
            <!-- Side Menu -->
            <% piante.forEach((piante, plant) => { %>
            <div class="list-group">
                <a class="list-group-item text-white bg-dark">
                    <b>Info</b>
                </a>
                <a class="list-group-item list-group-item-action"><b>Valori acqua:</b> Ph <%= piante.ph %> - dH <%= piante.dh %></a>
