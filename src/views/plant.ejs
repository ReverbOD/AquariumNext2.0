        <thead class="thead-dark">
            <tr>
                
                <th scope="col"></th>
                <th scope="col">Nome</th>               
                <th scope="col">Famiglia</th>
                <th scope="col">Provenienza</th>
                <th scope="col">Dimensioni</th>
                <th scope="col">Luce</th>
                <th scope="col">pH</th>
                <th scope="col">dH</th>
                <th scope="col">Temperatura</th>
                <th scope="col">Crescita</th>
                <th scope="col">Riproduzione</th>               
                <th scope="col">Posizione</th>
                <th scope="col">Difficolt√†</th>
                <th scope="col">Info</th>
            </tr>
        </thead>

        <tbody>
            <% piante.forEach((piante, plant) => { %>
            <tr>
                
                <td><img src="/icon/plant.png" class="rounded-circle pesci-img" alt=""></td>
                <td><%= piante.nome %></td>
                <td><%= piante.famiglia %></td>
                <td><%= piante.provenienza %></td>
                <td><%= piante.dimensioni %></td>
                <td><%= piante.luce %></td>
                <td><%= piante.ph %></td>
                <td><%= piante.dh %></td>
                <td><%= piante.temperatura %></td>
                <td><%= piante.crescita %></td>
                <td><%= piante.riproduzione %></td>               
                <td><%= piante.posizione %></td>
